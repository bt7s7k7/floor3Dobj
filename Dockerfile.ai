# Use Ubuntu as base image for better Blender compatibility
FROM ubuntu:22.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV BLENDER_VERSION=4.2.2
ENV BLENDER_PATH=/usr/local/blender/blender
ENV PYTHONPATH=/app:$PYTHONPATH
ENV PORT=5000

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    wget \
    curl \
    xz-utils \
    libx11-6 \
    libxrender1 \
    libgl1-mesa-glx \
    libglu1-mesa \
    libxi6 \
    libxkbcommon-x11-0 \
    libsm6 \
    libice6 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    libxss1 \
    libgtk-3-0 \
    libgdk-pixbuf2.0-0 \
    libglib2.0-0 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libfontconfig1 \
    libfreetype6 \
    libxinerama1 \
    libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Download and install Blender
RUN wget -q https://download.blender.org/release/Blender4.2/blender-${BLENDER_VERSION}-linux-x64.tar.xz \
    && tar -xf blender-${BLENDER_VERSION}-linux-x64.tar.xz \
    && mv blender-${BLENDER_VERSION}-linux-x64 /usr/local/blender \
    && rm blender-${BLENDER_VERSION}-linux-x64.tar.xz \
    && chmod +x /usr/local/blender/blender

# Create app directory
WORKDIR /app

# Copy Python requirements
COPY requirements.txt .

# Install Python dependencies
RUN python3 -m pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY . .

# Create necessary directories
RUN mkdir -p /tmp/uploads /tmp/outputs

# Set permissions
RUN chmod +x /usr/local/blender/blender
RUN chmod -R 755 /app

# Create non-root user for security
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app /tmp/uploads /tmp/outputs
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:${PORT}/health || exit 1

# Expose port
EXPOSE ${PORT}

# Start the application
CMD ["python3", "docker_ai_service.py"]
