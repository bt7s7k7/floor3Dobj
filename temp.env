# FloorplanToBlender3d Environment Configuration
# ================================================

# Blender Configuration
BLENDER_INSTALL_PATH="/Applications/Blender.app/Contents/MacOS/Blender"
BLENDER_SCRIPT_PATH="Blender/floorplan_to_obj_direct.py"

# Output Configuration
DEFAULT_OUTPUT_FORMAT=".obj"
OUTPUT_DIRECTORY="Target"
DATA_DIRECTORY="Data"

# Image Processing
DEFAULT_IMAGE_PATH="Images/Examples/example.png"
CALIBRATION_IMAGE_PATH="Images/Calibrations/wallcalibration.png"

# Server Configuration
HTTP_SERVER_PORT=8080
HTTP_SERVER_HOST="localhost"

# 3D Model Generation
SKIP_WINDOWS_DOORS=true
ENABLE_Z_FIGHTING_FIX=true
FLOOR_OFFSET_Z=-0.01
ROOM_OFFSET_Z=0.005

# Python Environment
PYTHON_ENV_PATH="venv"
REQUIREMENTS_FILE="requirements.txt"

# Development
DEBUG_MODE=false
VERBOSE_OUTPUT=true
AUTO_OPEN_BROWSER=false

# File Paths
CONFIG_DIRECTORY="Configs"
SYSTEM_CONFIG_FILE="Configs/system.ini"
DEFAULT_CONFIG_FILE="Configs/default.ini"

# Material Colors (RGB values 0-1)
FLOOR_COLOR_R=0.6
FLOOR_COLOR_G=0.6
FLOOR_COLOR_B=0.6

WALL_COLOR_R=0.8
WALL_COLOR_G=0.8
WALL_COLOR_B=0.8

ROOM_COLOR_R=0.9
ROOM_COLOR_G=0.9
ROOM_COLOR_B=0.7

WINDOW_COLOR_R=0.7
WINDOW_COLOR_G=0.9
WINDOW_COLOR_B=1.0

DOOR_COLOR_R=0.6
DOOR_COLOR_G=0.4
DOOR_COLOR_B=0.2

# Processing Options
ENABLE_NOISE_REMOVAL=true
ENABLE_IMAGE_RESCALING=true
WALL_SIZE_CALIBRATION=0

# Advanced Settings
MAX_VERTICES_PER_MODEL=10000
ENABLE_MATERIAL_OPTIMIZATION=true
EXPORT_MTL_FILES=true

# Viewer Settings
DEFAULT_CAMERA_DISTANCE=20
ENABLE_SHADOWS=true
ENABLE_WIREFRAME_TOGGLE=true
BACKGROUND_COLOR="gradient"
